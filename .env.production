# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=8080

# Database Configuration (Neon PostgreSQL)
# IMPORTANT: Replace with your production database URL
DATABASE_URL=postgresql://prod_user:your_secure_password@your-prod-host.neon.tech/prod_database?sslmode=require&channel_binding=require

# JWT Configuration
# IMPORTANT: Generate a strong, unique secret for production
JWT_SECRET=your-super-secure-production-jwt-secret-key-min-32-characters-long
JWT_EXPIRES_IN=1h

# Logging Configuration
LOG_LEVEL=error

# CORS Configuration (restrict to your frontend domains)
CORS_ORIGIN=https://yourdomain.com,https://api.yourdomain.com

# Cookie Configuration (secure for production)
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Arcjet Configuration
ARCJET_ENV=production
# IMPORTANT: Replace with your production Arcjet key
ARCJET_KEY=your_production_arcjet_key_here

# Other Production Settings
DEBUG=false
PRETTY_PRINT_LOGS=false

# Rate Limiting (if implementing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
HELMET_CSP_DIRECTIVES="default-src 'self'"